@model Covid19ManagementSystem.Models.Person

<h1>Person Details</h1>

<table>
    <tr>
        <th>ID</th>
        <td>@Model.ID</td>
    </tr>
    <tr>
        <th>Name</th>
        <td>@Model.FirstName @Model.LastName</td>
    </tr>
    <tr>
        <th>Date of Birth</th>
        <td>@Model.DateOfBirth.ToShortDateString()</td>
    </tr>
    <tr>
        <th>Telephone</th>
        <td>@Model.Telephone</td>
    </tr>
    <tr>
        <th>Mobile Phone</th>
        <td>@Model.MobilePhone</td>
    </tr>
    <tr>
        <th>Address</th>
        <td>@Model.NumberStreet, @Model.Street, @Model.City</td>
    </tr>
</table>

@Html.ActionLink("AddVaccine", "AddVaccine", new { id = @Model.PersonId })|
@Html.ActionLink("AddPositiveTest", "AddPositiveTest", new { id = @Model.PersonId })